<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:title="@string/home"
        app:titleTextAppearance="@style/BigText">

        <ImageButton
            android:layout_width="@dimen/dimen_32"
            android:layout_height="@dimen/dimen_32"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dimen_16"
            android:background="#00FFFFFF"
            android:contentDescription="@string/notification"
            android:scaleType="fitXY"
            android:src="@drawable/ic_outline_notifications"
            app:tint="@color/white" />

    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16">

        <TextView
            style="@style/MediumText"
            android:layout_marginTop="@dimen/dimen_16"
            android:text="Good Morning, Amir" />

        <TextView
            style="@style/SmallText"
            android:layout_marginBottom="@dimen/dimen_32"
            android:text="Welcome to ExerWise App." />

        <include
            android:id="@+id/progressBars"
            layout="@layout/progress_bar_indicator" />

        <include
            android:id="@+id/weekdayIndicator"
            layout="@layout/week_day_indicator" />

    </LinearLayout>

</LinearLayout>