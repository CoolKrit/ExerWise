    <com.example.exerwise.presentation.WeekdayIndicatorView
        android:id="@+id/weekdayIndicatorCircles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16" />

</LinearLayout>