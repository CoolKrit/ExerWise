<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_16"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_48"
            android:layout_height="@dimen/dimen_48"
            android:src="@drawable/circle_with_image" />

        <TextView
            android:id="@+id/exerciseTitle"
            style="@style/MediumTextViewStyle"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_weight="1"
            android:text="Chest" />

        <ImageButton
            android:id="@+id/exerciseDeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_close"
            app:tint="@color/holo_red" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/exerciseRestSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/exerciseRestTimer"
            style="@style/SmallTextViewStyle"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginEnd="@dimen/dimen_16"
            android:text="00:00" />

    </LinearLayout>

    <TextView
        android:id="@+id/exerciseInstructions"
        style="@style/SmallTextViewStyle"
        android:layout_marginTop="@dimen/dimen_16"
        android:textColor="?attr/colorPrimary" />

